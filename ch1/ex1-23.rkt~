#lang sicp

;; Searching for divisors



(define (smallest-divisor n)

  (define (square x) (* x x))

  (define (divide? a b)
    (= (remainder a b) 0))
  
  (define (find-divisor n test-divisor)
   (cond ((> (square test-divisor) n) n)
         ((devide? n test-divisor) test-divisor)
         (else (find-divisor n (+ 1 test-divisor)))))
  
  (find-divisor n 2))
